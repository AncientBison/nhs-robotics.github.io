---
import ArrowUpRightBold from "phosphor-astro/ArrowUpRightBold.astro";
---
<a {...Astro.props} class="flex w-full md:w-fit justify-center md:inline-flex items-center gap-2 font-primary font-bold text-2xl md:text-3xl py-4 px-6 rounded-xl uppercase hover:brightness-90 bg-white text-black">
    <slot />

    <div class="w-8 h-8 overflow-hidden">
        <div class="relative w-full h-full inner top-0 left-0">
            <ArrowUpRightBold width="32" class="absolute top-0 left-0 bg-white text-black" />
            <ArrowUpRightBold width="32" class="absolute top-full -left-full bg-white text-black" />
        </div>
    </div>
</a>

<style>
    .inner {
        transition: left, top, 0.3s ease;
    }

    a:hover .inner {
        @apply -top-8 left-8;
    }
</style>